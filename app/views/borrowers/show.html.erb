<div class="row">
    <p style="color:white"> &nbsp;&nbsp; <br> &nbsp;&nbsp;</p>
</div>
<div class="row">
    <p style="color:white"> &nbsp;&nbsp; <br> &nbsp;&nbsp;</p>
</div>
<div class="container-fluid">
    <div class="row">
        <nav class="col-md-2 d-none d-md-block bg-light text-info sidebar">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <h3 style="font-family: 'Raleway', sans-serif;">Welcome <%= @borrower.first_name%> </h3>
                    </li>
                    <li class="nav-item">
                        <h6>Amount Needed: <%= number_to_currency(@borrower.amount_needed) %></h6>  
                    </li>
                    <li class="nav-item">
                        <h6>Amount Raised: <%= number_to_currency(@borrower.amount_raised) %></h6>  
                    </li>
                </ul>
            </div>
        </nav>
        <main role="main" class="col-9 ml-sm-auto mx-3 pt-3 px-4" style="box-shadow: 0 0 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
            <h1 class="h2 text-info" style="font-family: 'Raleway', sans-serif;">Joes who lent you money</h1>
            <table class="table table-striped table-bordered">
                <tr style="background-color:lightgray">
                    <th>Name</th>
                    <th>Email</th>
                    <th>Amount Lent:</th>
                </tr>
                <tbody>
                    <% @transactions.each do |t| %>
                    <tr>
                        <td><%= t.first_name %> <% t.last_name %></td>
                        <td><%= t.email %></td>
                        <td><%= number_to_currency(t.amount_lent) %></td> 
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </main>
    </div>
</div>
<div class="row">
    <p style="color:white"> &nbsp;&nbsp; <br> &nbsp;&nbsp;</p>
</div>